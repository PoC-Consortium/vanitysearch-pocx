    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug unit tests in library 'vanitysearch_pocx'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--features",
                    "cuda"
                ]
            }
        },
        {
            "name": "Run GPU evlseed (DBG)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=vanitysearch-pocx",
                    "--features",
                    "cuda"
                ]
            },
            "args": [
                "bc1qevlseed",
                "-T",
                "60",
                "-g",
                "-t",
                "0"
            ],
            "env": {
                "CUDA_PATH": "C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v13.1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug unit tests in executable 'vanitysearch-pocx'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--bin=vanitysearch-pocx",
                    "--features",
                    "cuda"
                ]
            }
        }
    ]
}